<div class="blog-pagination">
    <ul class="justify-content-center">
        <% if (currentPage > 1) { %>
            <li class="page-item">
                <a class="page-link" href="/blog?page=<%= currentPage - 1 %>">Previous</a>
            </li>
        <% } %>

        <% let startPage = Math.max(1, currentPage - 2); %>
        <% let endPage = Math.min(startPage + 4, totalPages); %>

        <% if (startPage > 1) { %>
            <li class="page-item">
                <a class="page-link" href="/blog?page=1">1</a>
            </li>
            <% if (startPage > 2) { %>
                <li class="page-item disabled">
                    <a class="page-link" href="#">...</a>
                </li>
            <% } %>
        <% } %>
        <% for (let page = startPage; page <= endPage; page++) { %>
            <li class="page-item <% if (page == currentPage) { %>active<% } %>">
                <a class="page-link" href="/blog?page=<%= page %>"><%= page %></a>
            </li>
        <% } %>

        <% if (endPage < totalPages) { %>
            <% if (endPage < totalPages - 1) { %>
                <li class="page-item disabled">
                    <a class="page-link" href="#">...</a>
                </li>
            <% } %>
            <li class="page-item">
                <a class="page-link" href="/blog?page=<%= totalPages %>"><%= totalPages %></a>
            </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
            <li class="page-item">
                <a class="page-link" href="/blog?page=<%= currentPage + 1 %>">Next</a>
            </li>
        <% } %>
    </ul>
    <input type="number" class="form-control my-3" id="gotoPageInput"/>
    <div class="goPage">
        <button class="btn btn-primary mb-3" onclick="goToPage()">Go To Page</button>
    </div>
</div>